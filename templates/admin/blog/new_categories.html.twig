{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_categorie_new' %}

{% block main %}
    <h1>{{ 'title.categorie_new'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.slug) }}
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_categorie'|trans }}
    </button>
    <a href="{{ path('admin_index') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.index'|trans }}
    </a>
    <hr>
    <a href="{{ path('admin_home') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.home'|trans }}
    </a>
    <div class="well">
        <h2>{{ countCategories }}</h2>
        {% foreach categorie in categories %}
            <span>{{ categorie.title }}</span>
            <span>{{ categorie.post.title }}</span>
        {% endfor %}
    </div>
{% endblock %}
